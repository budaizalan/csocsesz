<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Csocsesz.NavBar">
    <Frame
        CornerRadius="20"
        Padding="10"
        BackgroundColor="{StaticResource DarkGray}">
        <Grid ColumnDefinitions="*,*,*,*">
            <ImageButton
                x:Name="PlayTabBtn"
                Source="play_icon.svg"
                Style="{StaticResource NavBarButtonStyle}"
                BackgroundColor="{StaticResource Red}"
                Grid.Column="0"
                />
            <ImageButton
                x:Name="HistoryTabBtn"
                Source="history_icon.svg"
                Style="{StaticResource NavBarButtonStyle}"
                BackgroundColor="{StaticResource Gray}"
                Grid.Column="1"
                />
            <ImageButton
                x:Name="StatsTabBtn"
                Source="stats_icon.svg"
                Style="{StaticResource NavBarButtonStyle}"
                BackgroundColor="{StaticResource Gray}"
                Grid.Column="2"
                />
            <ImageButton
                x:Name="SettingsTabBtn"
                Source="settings_icon.svg"
                Style="{StaticResource NavBarButtonStyle}"
                BackgroundColor="{StaticResource Gray}"
                Grid.Column="3"
                />
        </Grid>
    </Frame>
</ContentView>
