<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Csocsesz.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:contentPages="clr-namespace:Csocsesz.ContentPages"
    Title="Csocsesz">

    <TabBar Shell.TabBarIsVisible="False">
        <Tab Route="PlayPage">
            <ShellContent ContentTemplate="{DataTemplate contentPages:PlayPage}" />
        </Tab>
        <Tab Route="LiveGamePage">
            <ShellContent ContentTemplate="{DataTemplate contentPages:LiveGamePage}" />
        </Tab>
        <Tab Route="HistoryPage">
            <ShellContent ContentTemplate="{DataTemplate contentPages:HistoryPage}" />
        </Tab>
        <Tab Route="StatsPage">
            <ShellContent ContentTemplate="{DataTemplate contentPages:StatsPage}" />
        </Tab>
        <Tab Route="SettingsPage">
            <ShellContent ContentTemplate="{DataTemplate contentPages:SettingsPage}" />
        </Tab>
    </TabBar>

</Shell>