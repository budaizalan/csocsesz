<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:nav="clr-namespace:Csocsesz.ContentViews"
             x:Class="Csocsesz.ContentPages.PlayPage"
             BackgroundColor="Black">

    <Grid RowDefinitions="150, *, 120" Margin="10">
        <VerticalStackLayout 
            HorizontalOptions="Center" VerticalOptions="Center"
            Spacing="10"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="4">
            <Image x:Name="AppIconImage" Source="app_icon.svg" HeightRequest="80"/>
            <Label
                Text="CSOCSESZ"
                Style="{StaticResource Title}"
                VerticalOptions="Center"
                HorizontalTextAlignment="Center"
                />
        </VerticalStackLayout>
        <Grid RowDefinitions="2*,*,2*" ColumnDefinitions="*,*,*,*" 
              Grid.Row="1">
            <Button
            x:Name="LiveGameBtn"
            Text="LIVE GAME"
            Clicked="LiveGameButtonClicked"
            Style="{StaticResource RegularButtonStyle}"
            VerticalOptions="Start"
            Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"/>
        </Grid>
        <nav:NavBar x:Name="Navbar" Grid.Row="2" Grid.Column="0"/>
    </Grid>
</ContentPage>
