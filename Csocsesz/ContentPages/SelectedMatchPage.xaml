<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Csocsesz.ContentPages.SelectedMatchPage"
             Title="SelectedMatchPage"
             BackgroundColor="Black">
    <Grid RowDefinitions="120, *, 120" ColumnDefinitions="*" Margin="10">
        <Border
            StrokeThickness="0"
            Padding="20"
            BackgroundColor="{StaticResource DarkGray}"
            Grid.Row="2">
            <Button
                Text="BACK"
                Style="{StaticResource BigNormal}"
                BackgroundColor="Gray"
                Clicked="BackButtonClicked"
                CornerRadius="10"/>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20"/>
            </Border.StrokeShape>
        </Border>
    </Grid>
</ContentPage>